{
    "name": "copy-partner-proxy",
    "version": "1.0.0",
    "description": "Backend for Frontend (BFF) service for copy trading partner frontend applications. Acts as a secure proxy between partner frontends and AstraBit Copy Gateway with automatic request signing and authentication.",
    "author": "AstraBit <support@astrabit.io>",
    "private": true,
    "license": "UNLICENSED",
    "keywords": [
        "copy-trading",
        "bff",
        "proxy",
        "astrabit",
        "nestjs",
        "typescript",
        "hmac",
        "authentication"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/astrabit/copy-partner-proxy"
    },
    "bugs": {
        "url": "https://github.com/astrabit/copy-partner-proxy/issues",
        "email": "support@astrabit.io"
    },
    "homepage": "https://github.com/astrabit/copy-partner-proxy#readme",
    "engines": {
        "node": ">=18.17.0",
        "npm": ">=9.0.0"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "build:prod": "rimraf dist && nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "npm-run-all format:prettier:lint-all",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "hooks:pre-commit": "npm-run-all format:prettier:fix-staged",
        "hooks:pre-push": "npm-run-all format:prettier:lint-all",
        "format:prettier:lint-all": "prettier -l \"src/**/*.{ts*,js*,*css,less}\"",
        "format:prettier:fix-all-DANGEROUSLY": "npm-run-all \"format:prettier:lint-all -- --write\"",
        "format:prettier:fix-staged": "pretty-quick --staged",
        "postinstall": "is-ci || husky install"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.6",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.6",
        "@nestjs/platform-express": "^11.1.6",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/throttler": "^6.5.0",
        "axios": "^1.7.9",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "helmet": "^8.1.0",
        "nest-winston": "^1.9.4",
        "qs": "^6.14.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.10",
        "@nestjs/schematics": "^11.0.7",
        "@nestjs/testing": "^11.1.6",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.3.1",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "is-ci": "^4.1.0",
        "jest": "^30.1.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "pretty-quick": "^4.2.2",
        "rimraf": "^6.0.1",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.1",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s",
            "!**/*.example.ts",
            "!**/examples/**",
            "!**/main.ts"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            "/test/",
            ".example.ts",
            "/examples/"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/dist/",
            ".example.ts"
        ]
    }
}
